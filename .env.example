PORT=3000
NODE_ENV=development

# Cloudflare Configuration (REQUIRED - used for Vectorize and embeddings)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token
VECTORIZE_INDEX_NAME=portfolio-embeddings

# LLM Provider (openai, google, or cloudflare)
# Note: Google uses Cloudflare for embeddings (768 dimensions)
LLM_PROVIDER=google

# OpenAI Configuration
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo-preview

# Google AI Studio Configuration (for LLM only, embeddings use Cloudflare)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=gemini-1.5-flash

# Cloudflare Workers AI (if using cloudflare provider)
CF_AI_GATEWAY_URL=https://gateway.ai.cloudflare.com/v1/{account_id}/{gateway_id}

# Embedding Configuration
# Note: Use 768 for Google/Cloudflare, 1536 for OpenAI
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=768
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Search Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Response Configuration
SHOW_SOURCES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20

# IP Whitelist (comma-separated, leave empty to allow all)
IP_WHITELIST=

# API Key Authentication (leave empty to disable)
API_KEY=your_secret_api_key_here
